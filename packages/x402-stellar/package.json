{
  "name": "x402-stellar",
  "version": "0.2.0",
  "description": "Core library for Stellar x402 payment protocol - Accept payments with 1 line of code",
  "license": "MIT",
  "author": "Mert Karadayi",
  "repository": {
    "type": "git",
    "url": "https://github.com/mertkaradayi/stellar-x402.git",
    "directory": "packages/x402-stellar"
  },
  "homepage": "https://github.com/mertkaradayi/stellar-x402#readme",
  "bugs": {
    "url": "https://github.com/mertkaradayi/stellar-x402/issues"
  },
  "keywords": [
    "stellar",
    "x402",
    "payments",
    "http-402",
    "xlm",
    "cryptocurrency",
    "blockchain",
    "micropayments"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared/index.js"
    },
    "./verify": {
      "types": "./dist/verify/index.d.ts",
      "import": "./dist/verify/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@stellar/stellar-sdk": "^12.0.0",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@stellar/stellar-sdk": "^12.0.0"
  }
